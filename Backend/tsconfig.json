{
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "./build",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "allowSyntheticDefaultImports": true
  }
}
