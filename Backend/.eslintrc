{
  "ignorePatterns": ["**/*.js"],
  "root": true,
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "plugins": ["prettier", "import"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "bracketSpacing": true,
        "endOfLine": "auto",
      },
    ],
    "import/extensions": [
      "error",
      {
        "js": "never",
      },
    ],
    "import/no-unresolved": ["off"],
    "no-restricted-syntax": "off",
    "no-continue": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "eqeqeq": "off",
    "func-names": "off",
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
      },
    },
  },
}
 